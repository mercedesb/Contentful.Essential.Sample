@model PatternViewModel

<div class="row">
    <div class="col-md-8">
        <h2>@Html.DisplayFor(m => m.CurrentPattern.Name)</h2>
        <div class="row">
            <div class="col-md-3">
                <h6>
                    @Html.LabelFor(m => m.CurrentPattern.YarnWeight)
                </h6>
            </div>
            <div class="col-md-9">
                <p>
                    @Html.DisplayFor(m => m.CurrentPattern.YarnWeight)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h6>
                    @Html.LabelFor(m => m.CurrentPattern.Yardage)
                </h6>
            </div>
            <div class="col-md-9">
                <p>
                    @Html.DisplayFor(m => m.CurrentPattern.Yardage)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <h6>
                    @Html.LabelFor(m => m.CurrentPattern.HookSize)
                </h6>
            </div>
            <div class="col-md-9">
                <p>
                    @Html.DisplayFor(m => m.CurrentPattern.HookSize)
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <h6>
                    @Html.LabelFor(m => m.CurrentPattern.PatternText)
                </h6>
            </div>
            <div class="col-md-12">
                <p>
                    @Html.DisplayFor(m => m.CurrentPattern.PatternText)
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        @if (Model.ManipulatedImageUrls != null)
        {
            foreach (var img in Model.ManipulatedImageUrls)
            {
                <div>
                    <img src="@img" />
                </div>
            }
        }
    </div>
</div>